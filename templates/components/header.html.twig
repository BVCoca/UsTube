<header>
	<nav>
		<a href="/">
			<div class="homepage">
				<img src="{{asset('./assets/images/logo.png')}}" alt="Logo du site UsTube">
				<h1>UsTube</h1>
			</div>
		</a>
		<div
			class="searchBar">
			<!-- <label for="search">Rechercher :</label> -->
			<form method="POST" action="{{ path('app_search') }}" class="searchBarForm">
				<input type="text" name="search" placeholder="Rechercher">
				<button type="submit">
					<i class="fa-solid fa-magnifying-glass"></i>
				</button>
			</form>
		</div>

		{% if app.user %}
			<div id="mySidenav" class="sidenav">
				<a id="closeBtn" href="#" class="close">
					<i class="fa-solid fa-xmark"></i>
				</a>
				<div>
					<a href="{{path('app_profil', {'id':app.user.id})}}">
						{% if app.user.avatar %}
							<img id="avatarBtn" src="{{ asset('uploads/pictures/' ~ app.user.avatar) }}" alt="">
						{% else %}
							<img id="avatarBtn" src="{{ asset('assets/images/profil.png')}}" alt="">
						{% endif %}<br>Profil</a>
					<a href="{{path('app_add_video')}}">Mettre<br>en ligne<br>une vidéo</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{path('app_admin')}}">Dashboard</a>
					{% endif %}

					<a href="{{path('app_logout')}}">Se déconnecter</a>
				</div>
			</div>

			<a href="#" id="openBtn">
				{% if app.user.avatar %}
					<img id="avatarBtn" src="{{ asset('uploads/pictures/' ~ app.user.avatar) }}" alt="">
				{% else %}
					<img id="avatarBtn" src="{{ asset('assets/images/profil.png')}}" alt="">
				{% endif %}

			</a>
		</div>
	{% else %}
		<div class="navAccount">
			<div>
				<a href="{{path('app_login')}}" id="signIn">Se connecter</a>
			</div>
		</div>
	{% endif %}

</nav></header>
