{% extends 'base.html.twig' %}

{% block title %}Inscription | UsTube
{% endblock %}

{% block body %}
	<section>
		<div class="loginForm">
			<h2 class="mb-3 text-center">Inscription</h2>
			{{form_start(form)}}
			{% for label,message in app.flashes %}
				<div class="alert alert-{{label}}">
					{{ message[0] }}
				</div>
			{% endfor %}

			<div class="field-form">
				<div class="field-form">
					<div class="input-container">
						{{form_widget(form.email)}}
						{{form_label(form.email, null, {'label_attr': {'class': 'floating-labelEmail'}}) }}
					</div>
					<div class="input-container">
						{{ form_widget(form.password.first, {'attr': {'class': 'inputPassword', 'required': true}}) }}
						{{ form_label(form.password.first, null, {'label_attr': {'class': 'floating-labelPassword'}}) }}
					</div>
					<div class="input-container">
						{{ form_widget(form.password.second, {'attr': {'class': 'inputPassword', 'required': true}}) }}
						{{ form_label(form.password.second, null, {'label_attr': {'class': 'floating-labelPassword'}},) }}
					</div>
					<div class="input-container">
						{{ form_widget(form.pseudo, {'attr': {'class': 'inputPseudo'}}) }}
						{{ form_label(form.pseudo, null, {'label_attr': {'class': 'floating-labelPseudo'}}) }}
					</div>
					{{form_row(form.avatar)}}
				</div>
				<div class="btn-form">
					{{form_row(form.submit)}}
				</div>
			</div>

			{{form_end(form)}}
		</div>
	</section>
{% endblock %}
