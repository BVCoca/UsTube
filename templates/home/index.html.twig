{% extends 'base.html.twig' %}

{% block title %}Accueil | UsTube
{% endblock %}

{% block body %}
	<main>
		<div class="AllVideos">

			{% for video in videos %}
				<a href="{{path('app_single_video', {'id': video.id})}}" style="width: 20%;" class="card cardHover">
					<div class="card">
						<div class="cardHover">
							<img class="card-img-top" src="{{ asset('uploads/videos/pictures/' ~ video.image) }}" alt="Card image cap">
						</div>
						<div class="card-body d-flex">

							<div>
								<h5 class="card-title">{{video.title}}</h5>
								<p class="card-text">{{video.user.pseudo}}</p>
								<p class="card-text">Le
									{{video.createdAt|date('d/m/Y')}}</p>
							</div>
						</div>
					</div>
				</a>
			{% endfor %}
		</div>
	</main>
{% endblock %}
