{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié | UsTube
{% endblock %}

{% block body %}
	<section>
		<div class="loginForm">
			<h2 class="mb-3 text-center">Mot de passe oublié</h2>
			{{form_start(form)}}
			{% for label,message in app.flashes %}
				<div class="alert alert-{{label}}">
					{{ message[0] }}
				</div>
			{% endfor %}

			<div class="field-form">
				<div class="field-form">
					<div class="input-container">
						{{form_widget(form.email)}}
						{{form_label(form.email, null, {'label_attr': {'class': 'floating-labelEmail'}}) }}
					</div>
					<div class="btn-form">
						{{form_row(form.submit)}}
					</div>
				</div>

				{{form_end(form)}}
			</div>
		</div>
	</section>
{% endblock %}
